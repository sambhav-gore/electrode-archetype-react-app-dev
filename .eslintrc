---
extends:
  - walmart/configurations/es6-node
parserOptions:
  sourceType: module
rules:
  strict:
    - 'off'
    - global
  no-process-exit:
    - 'off'
  func-style:
    - 'off'
  global-require:
    - 'off'
  no-magic-numbers:
    - 'off'
  no-console:
    - 'off'
  quotes:
    - error
    - double
    - avoidEscape: true
      allowTemplateLiterals: true
  max-len:
    - 2
    - 120
  no-extra-parens: [0]
  prefer-spread:
    - 'off'
